package br.com.serratec.enums;

import com.fasterxml.jackson.annotation.JsonCreator;

public enum StatusEnum {
	Aguardando(1, "Aguardando"), Em_Atendimento(2, "Em Atendimento"), Atendido(3, "Atendido");
	
	private Integer codigo;
	private String status;
	
	private StatusEnum(Long codigo, String status) {
		this.codigo = codigo;
		this.status = status;
	}

	public Long getCodigo() {
		return codigo;
	}

	public void setCodigo(Long codigo) {
		this.codigo = codigo;
	}

	public String getStatus() {
		return status;
	}

	public void setStatus(String status) {
		this.status = status;
	}
	
	
	@JsonCreator
    public static Categoria verificar(String valor) {
        for (Categoria c:  Categoria.values()) {
            if (c.name().equals(valor)) {
                return c;
            }
        }
        throw new EnumException("Categoria Inv√°lida");
    }
}
	
}
